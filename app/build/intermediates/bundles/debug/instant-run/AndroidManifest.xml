<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.louis.pp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.example.louis.pp.FirstScreen"
            android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.louis.pp.MainActivity"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.example.louis.pp.ChangeTurns"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="com.example.louis.pp.ScoreBoard"
            android:screenOrientation="sensorLandscape" >
        </activity>
    </application>

</manifest>