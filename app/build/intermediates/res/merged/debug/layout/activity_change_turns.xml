<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.louis.pp.ChangeTurns"
    android:background="#009900">

    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/whoseTurnText"
        android:textAlignment="center"
        android:singleLine="true"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/cont"
        android:layout_toStartOf="@+id/cont" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p00"
        android:layout_marginLeft="81dp"
        android:layout_marginStart="81dp"
        android:layout_below="@+id/freeGoText"
        android:layout_alignLeft="@+id/freeGoText"
        android:layout_alignStart="@+id/freeGoText"
        android:background="@null" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p01"
        android:layout_alignTop="@+id/p00"
        android:layout_toRightOf="@+id/p00"
        android:layout_toEndOf="@+id/p00"
        android:background="@null" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p02"
        android:layout_alignTop="@+id/p01"
        android:layout_toRightOf="@+id/p01"
        android:layout_toEndOf="@+id/p01"
        android:background="@null" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p03"
        android:layout_alignTop="@+id/p02"
        android:layout_toRightOf="@+id/p02"
        android:layout_toEndOf="@+id/p02"
        android:background="@null" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p04"
        android:layout_alignTop="@+id/p03"
        android:layout_toRightOf="@+id/p03"
        android:layout_toEndOf="@+id/p03"
        android:background="@null" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p10"
        android:layout_alignTop="@+id/p11"
        android:layout_toLeftOf="@+id/p11"
        android:layout_toStartOf="@+id/p11"
        android:background="@null" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p11"
        android:layout_alignTop="@+id/freeGoText"
        android:layout_toLeftOf="@+id/p12"
        android:layout_toStartOf="@+id/p12"
        android:background="@null" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p12"
        android:layout_alignTop="@+id/p11"
        android:layout_toLeftOf="@+id/p13"
        android:layout_toStartOf="@+id/p13"
        android:background="@null" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p13"
        android:layout_alignTop="@+id/p12"
        android:layout_toLeftOf="@+id/p04"
        android:layout_toStartOf="@+id/p04"
        android:background="@null" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p14"
        android:layout_alignTop="@+id/p13"
        android:layout_alignLeft="@+id/p04"
        android:layout_alignStart="@+id/p04"
        android:background="@null" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p20"
        android:layout_alignTop="@+id/p24"
        android:layout_toRightOf="@+id/p1Text"
        android:layout_toEndOf="@+id/p1Text"
        android:background="@null" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p21"
        android:layout_alignTop="@+id/p22"
        android:layout_toLeftOf="@+id/p22"
        android:layout_toStartOf="@+id/p22"
        android:background="@null" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p22"
        android:layout_alignTop="@+id/p23"
        android:layout_toRightOf="@+id/p11"
        android:layout_toEndOf="@+id/p11"
        android:background="@null" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p23"
        android:layout_alignTop="@+id/p24"
        android:layout_toRightOf="@+id/p22"
        android:layout_toEndOf="@+id/p22"
        android:background="@null" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/img54"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:id="@+id/p24"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/p13"
        android:layout_toRightOf="@+id/p23"
        android:layout_toEndOf="@+id/p23"
        android:background="@null" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/cont"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="goBack"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="FREE GO!"
        android:id="@+id/freeGoText"
        android:textSize="70dp"
        android:singleLine="true"
        android:textColor="#ff0000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/p2Text"
        android:textSize="20dp"
        android:layout_alignTop="@+id/p20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/p20"
        android:layout_toLeftOf="@+id/p20"
        android:layout_toStartOf="@+id/p20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/p1Text"
        android:textSize="20dp"
        android:layout_alignTop="@+id/freeGoText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/p10"
        android:layout_toLeftOf="@+id/p10"
        android:layout_toStartOf="@+id/p10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/p0Text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_toLeftOf="@+id/p20"
        android:layout_toStartOf="@+id/p20"
        android:layout_below="@+id/freeGoText"
        android:layout_alignBottom="@+id/p00" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASS"
        android:id="@+id/p2Pass"
        android:textColor="#fffb00"
        android:textSize="35dp"
        android:layout_alignTop="@+id/p20"
        android:layout_alignLeft="@+id/p20"
        android:layout_alignStart="@+id/p20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASS"
        android:id="@+id/p1Pass"
        android:textSize="35dp"
        android:textColor="#fffb00"
        android:layout_alignTop="@+id/p10"
        android:layout_alignLeft="@+id/p10"
        android:layout_alignStart="@+id/p10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASS"
        android:id="@+id/p0Pass"
        android:textSize="35dp"
        android:textColor="#fffb00"
        android:layout_below="@+id/freeGoText"
        android:layout_toRightOf="@+id/p0Text"
        android:layout_toEndOf="@+id/p0Text" />
</RelativeLayout>
