<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.louis.pp.ScoreBoard"
    android:background="#009900">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/p0Name"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/p1Name"
        android:layout_below="@+id/p0Name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/p2Name"
        android:layout_below="@+id/p1Name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/p3Name"
        android:layout_below="@+id/p2Name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:textColor="#ffffff" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/scoreBar0"
        android:layout_alignTop="@+id/p0Name"
        android:layout_toRightOf="@+id/p0Name"
        android:layout_toEndOf="@+id/p0Name"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:progressTint="#000000"
        android:progress="10"
        android:progressBackgroundTint="#ffffff"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/scoreBar1"
        android:layout_alignTop="@+id/p1Name"
        android:layout_alignLeft="@+id/scoreBar0"
        android:layout_alignStart="@+id/scoreBar0"
        android:progressTint="#000000"
        android:progressBackgroundTint="#ffffff"
        android:progress="0" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/scoreBar2"
        android:layout_alignTop="@+id/p2Name"
        android:layout_alignLeft="@+id/scoreBar1"
        android:layout_alignStart="@+id/scoreBar1"
        android:progressTint="#000000"
        android:progressBackgroundTint="#ffffff"
        android:progress="0" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/scoreBar3"
        android:layout_alignTop="@+id/p3Name"
        android:layout_alignLeft="@+id/scoreBar2"
        android:layout_alignStart="@+id/scoreBar2"
        android:progressTint="#000000"
        android:progressBackgroundTint="#ffffff"
        android:progress="0" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Return"
        android:id="@+id/returnScoreBoard"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/scoreBar3"
        android:layout_toEndOf="@+id/scoreBar3"
        android:onClick="returnToGame"
        android:nestedScrollingEnabled="false"
        android:progressTint="#000000"
        android:progressBackgroundTint="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/score0"
        android:layout_alignTop="@+id/scoreBar0"
        android:layout_toRightOf="@+id/scoreBar0"
        android:layout_toEndOf="@+id/scoreBar0"
        android:layout_marginLeft="5dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/score1"
        android:layout_alignTop="@+id/scoreBar1"
        android:layout_toRightOf="@+id/scoreBar1"
        android:layout_toEndOf="@+id/scoreBar1"
        android:layout_marginLeft="5dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/score2"
        android:layout_alignTop="@+id/scoreBar2"
        android:layout_toRightOf="@+id/scoreBar2"
        android:layout_toEndOf="@+id/scoreBar2"
        android:layout_marginLeft="5dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/score3"
        android:layout_alignTop="@+id/scoreBar3"
        android:layout_toRightOf="@+id/scoreBar3"
        android:layout_toEndOf="@+id/scoreBar3"
        android:layout_marginLeft="5dp"
        android:textColor="#ffffff" />
</RelativeLayout>
